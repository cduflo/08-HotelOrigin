        <DataGrid x:Name="dataGridRooms" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="272" Height="192" MouseDoubleClick="dataGridRooms_MouseDoubleClick"/>

    </Grid>
