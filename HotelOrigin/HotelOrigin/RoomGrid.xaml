        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelOrigin"
        mc:Ignorable="d"
        Title="RoomGrid" Height="300" Width="300">
    <Grid>
        <Button x:Name="buttonDelete" Content="Delete" HorizontalAlignment="Left" Margin="32,226,0,10" Width="75" Click="buttonDelete_Click_1"/>
